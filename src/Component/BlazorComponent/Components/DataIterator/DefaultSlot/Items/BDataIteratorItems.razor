@namespace BlazorComponent
@typeparam TItem
@typeparam TComponent
@inherits ComponentAbstractBase<TComponent>

@if (IsEmpty)
{
    <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BDataIteratorEmpty<,>))"></AbstractComponent>
}
else if (ComponentChildContent != null)
{
    @ComponentChildContent
}
else if (ItemContent != null)
{
    var items = ComputedItems;
    for (var i = 0; i < items.Count(); i++)
    {
        var item = items.ElementAt(i);
        @ItemContent(new ItemProps<TItem>(i, item))
    }
}

