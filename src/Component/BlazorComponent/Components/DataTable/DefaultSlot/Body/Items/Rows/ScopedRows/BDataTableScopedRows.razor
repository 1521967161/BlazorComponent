@namespace BlazorComponent
@typeparam TItem
@typeparam TDataTable
@inherits ComponentAbstractBase<TDataTable>

@for (var i = 0; i < ComputedItems.Count(); i++)
{
    var item = ComputedItems.ElementAt(i);
    @ItemContent((i,item))

    if (IsExpanded(item))
    {
        @ExpandedItemContent
    }
}
