@namespace BlazorComponent
@typeparam TItem
@typeparam TDataTable
@inherits ComponentAbstractBase<TDataTable>

@Render(typeof(BDataTableRowGroup), props => {
    props
        .Add("Value",IsExpanded)
        .AddContent("RowHeaderContent", Render(typeof(BDataTableDefaultSimpleRow<,>), rowProps => {
            rowProps
                .Add("Index",Index)
                .Add("Item",Item);
        }))
        .AddContent("RowContentContent",@<tr class="@CssProvider.GetClass("expanded-content")">
            @ExpandedItemContent(Props)
        </tr>);
})

