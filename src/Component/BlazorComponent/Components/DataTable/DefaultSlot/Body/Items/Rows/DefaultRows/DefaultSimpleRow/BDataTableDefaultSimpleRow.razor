@namespace BlazorComponent
@typeparam TItem
@typeparam TDataTable
@inherits ComponentAbstractBase<TDataTable>

@Render(typeof(BDataTableRow<>), props => {
    props
        .Add("onclick",HandleOnRowClickAsync)
        .Add("oncontextmenu",HandleOnRowContextMenuAsync)
        .Add("ondblclick",HandleOnRowDbClickAsync)
        .Add("Index",Index)
        .Add("Item",Item);

    if (ShowExpand || ShowSelect)
    {
        props.AddContent<ItemColProps<TItem>>("ItemColContent", context => {
            if (context.Header.Value == "data-table-expand" && ShowExpand)
            {
                if (ItemDataTableExpandContent != null)
                {
                    return ItemDataTableExpandContent;
                }

                return Render(typeof(BIcon), "expand-icon", data: Item, textContent: ExpandIcon);
            }

            if (context.Header.Value == "data-table-select" && ShowSelect)
            {
                if (ItemDataTableSelectContent != null)
                {
                    return ItemDataTableSelectContent;
                }

                return Render(typeof(BSimpleCheckbox), data: Item);
            }

            if (ItemColContent != null)
            {
                return ItemColContent(context);
            }

            return RenderText(context.Value);
        });
    }
}, key: ItemKey?.Invoke(Item))

