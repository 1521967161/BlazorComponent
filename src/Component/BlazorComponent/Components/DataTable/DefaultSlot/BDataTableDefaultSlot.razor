@namespace BlazorComponent
@typeparam TItem
@typeparam TDataTable
@inherits ComponentAbstractBase<TDataTable>

@Render(typeof(BSimpleTable), props => {
        if (HasTop)
        {
            props.Add("TopContent", TopContent);
        }

        props.AddChildContents(Render(typeof(BDataTableCaption<,>)), Render(typeof(BDataTableColgroup<,>)), Render(typeof(BDataTableHeaders<,>)), Render(typeof(BDataTableBody<,>)), Render(typeof(BDataTableFoot<,>)));

        if (HasBottom)
        {
            props.Add("BottomContent", Render(typeof(BDataTableFooters<,>)));
        }
})
