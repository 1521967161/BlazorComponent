@namespace BlazorComponent
@typeparam TTooltip
@inherits ComponentAbstractBase<ITooltip>

@if (ShowContent)
{
    <Transition Name="@TransitionName">
        <Element Show="Value"
             class="@CssProvider.GetClass("content")"
             style="@CssProvider.GetStyle("content")"
             ReferenceCaptureAction="r => ContentRef = r">
            @ComponentChildContent
        </Element>
    </Transition>
}
