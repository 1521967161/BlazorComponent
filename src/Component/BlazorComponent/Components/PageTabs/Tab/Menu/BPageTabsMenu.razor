@namespace BlazorComponent
@typeparam TTabs
@inherits ComponentPartBase<TTabs>

<BMenu Absolute OffsetY @attributes="GetAttributes(typeof(BMenu))">
    <BList @attributes="GetAttributes(typeof(BList))">
        <BListItem @onclick="OnReload" @attributes="GetAttributes(typeof(BListItem))">
            <BListItemContent>
                <BListItemTitle>
                    重新加载
                </BListItemTitle>
            </BListItemContent>
        </BListItem>
        <BListItem @onclick="OnCloseLeft" @attributes="GetAttributes(typeof(BListItem))">
            <BListItemContent>
                <BListItemTitle>
                    关闭左边
                </BListItemTitle>
            </BListItemContent>
        </BListItem>
        <BListItem @onclick="OnCloseRight" @attributes="GetAttributes(typeof(BListItem))">
            <BListItemContent>
                <BListItemTitle>
                    关闭右边
                </BListItemTitle>
            </BListItemContent>
        </BListItem>
        <BListItem @onclick="OnCloseOther" @attributes="GetAttributes(typeof(BListItem))">
            <BListItemContent>
                <BListItemTitle>
                    关闭其它
                </BListItemTitle>
            </BListItemContent>
        </BListItem>
    </BList>
</BMenu>

