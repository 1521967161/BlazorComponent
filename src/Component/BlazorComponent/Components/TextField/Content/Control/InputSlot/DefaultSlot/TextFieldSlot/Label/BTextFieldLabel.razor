@namespace BlazorComponent
@typeparam TValue
@inherits BInputLabel<TValue,ITextField<TValue>>

@if (ShowLabel)
{
    <BLabel @attributes="GetAttributes(typeof(BLabel))" @ref="LabelReference">
        @if (LabelContent != null)
        {
            @LabelContent
        }
        else
        {
            @Label
        }
    </BLabel>
}