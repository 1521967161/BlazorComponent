@namespace BlazorComponent
@typeparam TBanner
@inherits ComponentPartBase<TBanner>

@if (HasIcon)
{
    <BAvatar @attributes="GetAttributes(typeof(BAvatar))">
        @if (Icon != null)
        {
            <BIcon @attributes="GetAttributes(typeof(BIcon))">
                @Icon
            </BIcon>
        }
        else
        {
            @IconContent
        }
    </BAvatar>
}
