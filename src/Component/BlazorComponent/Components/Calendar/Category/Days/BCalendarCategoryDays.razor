@namespace BlazorComponent
@typeparam TCalendarCategory
@inherits BCalendarDailyDays<TCalendarCategory>

@for (var i = 0; i < Days.Count(); i++)
{
    var index = i;
    var dayList = Day(Days[index]);
    for (var j = 0; j < dayList.Count(); j++)
    {
        var categoryIndex = j;
        var day = dayList[j];
        <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BCalendarCategoryDay<>))" Index="@index" Day="@day" CategoryIndex="@categoryIndex"></AbstractComponent>
    }
}
