@namespace BlazorComponent
@inherits BDomComponentBase

<CascadingValue Value="this" IsFixed>
    <Element Tag="@Tag" class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id">
        @if (ChildContent == null)
        {
            @foreach (var item in Items)
            {
                <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BBreadcrumbsItemGroup<>))" Item="@item"></AbstractComponent>
            }
        }
        else
        {
            @ChildContent
        }
    </Element>
</CascadingValue>