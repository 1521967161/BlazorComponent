@namespace BlazorComponent
@inherits BDomComponentBase

<CascadingValue Value="IsDark" Name="IsDark">
    <BCascadingValue Value="this" IsFixed>
        <Element Tag="@Tag" class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id">
            @if (ChildContent == null)
            {
                @foreach (var item in Items)
                {
                    @RenderPart(typeof(BBreadcrumbsItemGroup<>),item)
                }
            }
            else
            {
                @ChildContent
            }
        </Element>
    </BCascadingValue>
</CascadingValue>
