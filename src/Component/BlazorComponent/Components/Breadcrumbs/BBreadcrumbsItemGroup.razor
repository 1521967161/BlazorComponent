@namespace BlazorComponent
@typeparam TBreadcrumbs
@inherits ComponentAbstractBase<TBreadcrumbs>

@if (ItemContent != null)
{
    @ItemContent(Item)

    @if (RenderDivider && !IsLast)
    {
        <AbstractComponent Metadata="AbstractProvider.GetMetadata<BBreadcrumbsDivider>()"></AbstractComponent>
    }
}
else
{
    <AbstractComponent Metadata="AbstractProvider.GetMetadata<BBreadcrumbsItem>()"
                       Text="@Item.Text"
                       Href="@Item.Href"
                       Disabled="@Item.Disabled"/>

    @if (RenderDivider && !IsLast)
    {
        <AbstractComponent Metadata="AbstractProvider.GetMetadata<BBreadcrumbsDivider>()" Divider="@Divider" DividerContent="@DividerContent"></AbstractComponent>
    }
}