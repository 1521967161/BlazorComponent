@namespace BlazorComponent
@using BlazorComponent.Helpers
@inherits BDomComponentBase
@implements IIcon

<BCascadingValue Value="this">
    @if (RegexHelper.RegexSvgPath(Icon))
    {
        <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BSvgIconSlot<>))"></AbstractComponent>
    }
    else
    {
        <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BFontIconSlot<>))"></AbstractComponent>
    }
</BCascadingValue>