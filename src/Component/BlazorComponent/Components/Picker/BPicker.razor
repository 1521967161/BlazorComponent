@namespace BlazorComponent
@inherits BDomComponentBase

<BCascadingValue Value="this">
    <div class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id" @ref="Ref">
        @if (TitleContent != null)
        {
            <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BPickerTitle<>))"></AbstractComponent>
        }
        <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BPickerBody<>))"></AbstractComponent>
        @if (ActionsContent != null)
        {
            <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BPickerActions<>))"></AbstractComponent>
        }
    </div>
</BCascadingValue>

