@namespace BlazorComponent
@inherits ComponentBase
@typeparam TItem

<span class="@CssBuilder.Class" @onclick="OnClick">
    @if (IsShowSwitchIcon)
    {
        @if (!SelfNode.Loading)
        {
            if (BTreeComponent.SwitcherIconTemplate != null)
            {
                @BTreeComponent.SwitcherIconTemplate(SelfNode)
            }
            else
            {
                <Icon Type="caret-down" Theme="outline" class="ant-BTree-switcher-icon" />
            }
        }
        else
        {
            <Icon Type="loading" Theme="outline" class="ant-BTree-switcher-loading-icon" />
        }

    }
    @if (BTreeComponent.ShowLine)
    {
        @if (!SelfNode.Loading)
        {
            if (BTreeComponent.SwitcherIconTemplate != null)
            {
                @BTreeComponent.SwitcherIconTemplate(SelfNode)
            }
            else
            {
                @if (IsShowLineIcon)
                {
                    <Icon Type="@(IsSwitcherOpen ? "minus-square" : "plus-square")" Theme="outline" class="ant-BTree-switcher-line-icon" />
                }
                else
                {
                    <Icon Type="file" Theme="outline" class="ant-BTree-switcher-line-icon" />
                }
            }
        }
        else
        {
            <Icon Type="loading" Theme="outline" class="ant-BTree-switcher-loading-icon" />
        }

    }
</span>