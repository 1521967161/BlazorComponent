@namespace BlazorComponent
@typeparam TBadge
@inherits ComponentPartBase<TBadge>

@if (!Dot)
{
    if (BadgeContent != null)
    {
        @BadgeContent
    }
    if (Content != null)
    {
        @Content
    }
    if (!string.IsNullOrWhiteSpace(Icon))
    {
        <BIcon @attributes="GetAttributes(typeof(BIcon))">@Icon</BIcon>
    }
}