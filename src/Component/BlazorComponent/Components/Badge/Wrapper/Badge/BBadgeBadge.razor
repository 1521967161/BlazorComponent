@namespace BlazorComponent
@typeparam TBadge
@inherits ComponentPartBase<TBadge>

@if (Transition != null)
{
    <Transition Name="@Transition">
        <Element Tag="span" Show="Value" class="@CssProvider.GetClass("badge")" style="@CssProvider.GetStyle("badge")">
            @RenderPart(typeof(BBadgeContent<>))
        </Element>
    </Transition>
}
else
{
    <Element Tag="span" Show="Value" class="@CssProvider.GetClass("badge")" style="@CssProvider.GetStyle("badge")">
        @RenderPart(typeof(BBadgeContent<>))
    </Element>
}