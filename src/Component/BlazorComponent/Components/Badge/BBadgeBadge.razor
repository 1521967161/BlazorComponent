@namespace BlazorComponent
@typeparam TBadge
@inherits ComponentAbstractBase<TBadge>

@if (Transition != null)
{
    <Transition Name="@Transition">
        <Element Tag="span" Show="Value" class="@CssProvider.GetClass("badge")" style="@CssProvider.GetStyle("badge")">
            <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BBadgeContent<>))"></AbstractComponent>
        </Element>
    </Transition>
}
else
{
    <Element Tag="span" Show="Value" class="@CssProvider.GetClass("badge")" style="@CssProvider.GetStyle("badge")">
        <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BBadgeContent<>))"></AbstractComponent>
    </Element>
}