@namespace BlazorComponent
@typeparam TDatePickerHeader
@inherits ComponentAbstractBase<TDatePickerHeader>

<div class="@CssProvider.GetClass("value")">
    <Transition Name="@Transition">
        <GroupElement Key="Value" class="@CssProvider.GetClass("header")">
            <button @attributes="HeaderAttrs">
                @if (ComponentChildContent != null)
                {
                    @ComponentChildContent
                }
                else
                {
                    @Formatter?.Invoke(Value)
                }
            </button>
        </GroupElement>
    </Transition>
</div>

