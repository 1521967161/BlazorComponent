@namespace BlazorComponent
@inherits BDomComponentBase

<BCascadingValue Value="this">
    @Render(typeof(BPicker), props => {
        props
            .Add("class",CssProvider.GetClass());

        if (!NoTitle)
        {
            props
                .AddContent("TitleContent",@<AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BDatePickerTitle))"></AbstractComponent>);
        }

        props.AddChildContent(@<GroupElement Key="InternalActivePicker">
                @if (InternalActivePicker == DatePickerType.Year)
                {
                    <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BDatePickerYears<>))"></AbstractComponent>
                }
                else
                {
                    <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BDatePickerTableHeader<>))"></AbstractComponent>
                    if (InternalActivePicker == DatePickerType.Date)
                    {
                        <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BDatePickerDateTable<>))"></AbstractComponent>
                    }
                    else
                    {
                        <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BDatePickerMonthTable<>))"></AbstractComponent>
                    }
                }
            </GroupElement>);

        if (ChildContent != null)
        {
            props.AddContent("ActionsContent",ChildContent);
        }
    })
</BCascadingValue>

