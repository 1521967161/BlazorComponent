@namespace BlazorComponent
@inherits BDomComponentBase

<BCascadingValue Value="this">
    @if (InternalShowOverlay)
    {
        <AbstractComponent Metadata="AbstractProvider.GetMetadata<BOverlay>()"/>
    }
    <aside class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id" @ref="Ref" @attributes="Attributes"
           @onmouseenter="MouseEnter" @onmouseleave="MouseLeave" @onclick="Click">
        @if (Src != default || ImgContent != default)
        {
            <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BNavigationDrawerBackground<>))"></AbstractComponent>
        }
        <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BNavigationDrawerPosition<>))" ClassName="prepend"></AbstractComponent>
        <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BNavigationDrawerContent<>))"></AbstractComponent>
        <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BNavigationDrawerPosition<>))" ClassName="append"></AbstractComponent>
        <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BNavigationDrawerBorder<>))"></AbstractComponent>
    </aside>
</BCascadingValue>