@namespace BlazorComponent
@inherits BGroupItem<ItemGroupBase>

<div class="@CssProvider.GetClass()"
     style="@CssProvider.GetStyle()"
     id="@Id"
     @ref="Ref"
     @onclick="HandleOnClick"
     @attributes="Attributes">
    @if (ItemContent != null)
    {
        @ItemContent(new ItemContext()
        {
            Active = IsActive
        });
    }
    else
    {
        @ChildContent
    }
</div>