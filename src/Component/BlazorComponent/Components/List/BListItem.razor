@namespace BlazorComponent
@inherits BGroupItem<ItemGroupBase>

<div class="@CssProvider.GetClass()"
     style="@CssProvider.GetStyle()"
     id="@Id"
     @ref="Ref"
     @onclick="HandleOnClick"
     @attributes="Attributes">

    @if (ItemContent != null)
    {
        @ComputedItemContent
    }
    else
    {
        @ChildContent
    }

</div>