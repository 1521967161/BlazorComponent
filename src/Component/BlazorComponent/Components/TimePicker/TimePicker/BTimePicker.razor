@namespace BlazorComponent
@inherits BDomComponentBase


<BCascadingValue Value="this">
    @Render(typeof(BPicker), props => {
        props.Add("class",CssProvider.GetClass());

        if (!NoTitle)
        {
            props.AddContent("TitleContent",@<AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BTimePickerTitle))"></AbstractComponent>);
        }

        props.AddChildContent(@<AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BTimePickerPickerBody<>))"></AbstractComponent>);

        if (ChildContent!=null)
        {
            props.AddContent("ActionsContent",ChildContent);
        }
    })
</BCascadingValue>

