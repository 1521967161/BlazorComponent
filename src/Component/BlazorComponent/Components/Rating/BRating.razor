@namespace BlazorComponent
@inherits BDomComponentBase

<BCascadingValue Value="this">
    <div class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id" @ref="Ref">
        @for(var i = 0; i < Length.ToInt32(); i++)
        {
            var index = i;
            <AbstractComponent @key="index" Metadata="AbstractProvider.GetMetadata(typeof(BRatingItem<>))" ItemIndex="@index"></AbstractComponent>
        }
    </div>
</BCascadingValue>