@namespace BlazorComponent
@inherits BDomComponentBase

@if (Transition != null)
{
    <Transition Name="@Transition">
        <Element Show="Value" Tag="@Tag" role="alert" class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id">
            @RenderPart(typeof(BAlertWrapper<>))
        </Element>
    </Transition>
}
else
{
    <Element Show="Value" Tag="@Tag" role="alert" class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id">
        @RenderPart(typeof(BAlertWrapper<>))
    </Element>
}