@namespace BlazorComponent
@inherits BDomComponentBase

<BCascadingValue Value="this">
    @if (Transition != null)
    {
        <Transition Name="@Transition">
            <Element Show="Value" Tag="@Tag" role="alert" class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id">
                <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BAlertWrapper<>))"></AbstractComponent>
            </Element>
        </Transition>
    }
    else
    {
        <Element Show="Value" Tag="@Tag" role="alert" class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id">
            <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BAlertWrapper<>))"></AbstractComponent>
        </Element>
    }
</BCascadingValue>