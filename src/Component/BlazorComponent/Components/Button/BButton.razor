@namespace BlazorComponent
@inherits BGroupItem<BItemGroup>

<AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(CascadingValue<>))">
    <button type="@TypeAttribute"
            class="@CssProvider.GetClass()"
            style="@CssProvider.GetStyle()"
            id="@Id"
            disabled="@Disabled"
            @ref="Ref"
            @onclick="HandleOnClick"
            @onclick:stopPropagation="StopPropagation"
            @attributes="Attributes">

        @if (HasLoader)
        {
            <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BButtonLoader<>))"></AbstractComponent>
        }

        <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BButtonContent<>))"></AbstractComponent>
    </button>
</AbstractComponent>