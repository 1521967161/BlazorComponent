@namespace BlazorComponent
@inherits BGroupItem<ItemGroupBase>

<BCascadingValue Value="this">
    <Element Tag="button" type="@TypeAttribute"
             class="@CssProvider.GetClass()"
             style="@CssProvider.GetStyle()"
             id="@Id"
             disabled="@Disabled"
             ReferenceCaptureAction="reference=>Ref=reference"
             @onclick="HandleOnClick"
             __internal_stopPropagation_onclick="@StopPropagation"
             @attributes="Attributes">

        @if (HasLoader)
        {
            <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BButtonLoader<>))"></AbstractComponent>
        }

        <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BButtonContent<>))"></AbstractComponent>
    </Element>
</BCascadingValue>