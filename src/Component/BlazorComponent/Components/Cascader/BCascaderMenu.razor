@namespace BlazorComponent
@typeparam TItem
@typeparam TValue
@typeparam TInput
@inherits BSelectMenu<TItem, TValue, TInput>

<AbstractComponent Metadata="AbstractProvider.GetMetadata<BMenu>()">
    <TAbstractContent TContext="MenuContext" Name="ActivatorContent">
        @{
            //Menu will change
            SetOnExtraClick?.Invoke(context.OnClick);
        }
    </TAbstractContent>
    <AbstractContent Name="ChildContent">
        <CascadingValue Value="Component">
            @if (ComputedItems.Any())
            {
                <AbstractComponent Items="@ComputedItems" Metadata="AbstractProvider.GetMetadata(typeof(BCascaderMenuBody<,,>))">
                </AbstractComponent>
            }
        </CascadingValue>
    </AbstractContent>
</AbstractComponent>
