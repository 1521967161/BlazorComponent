@namespace BlazorComponent
@typeparam TItem
@typeparam TValue
@typeparam TInput
@inherits BSelectMenu<TItem, TValue,TValue, TInput>

<AbstractComponent Metadata="AbstractProvider.GetMetadata<BMenu>()" @ref="Menu">
    <AbstractContent Name="ChildContent">
        <CascadingValue Value="Component">
            @if (ComputedItems.Any())
            {
                <AbstractComponent Items="@ComputedItems" Metadata="AbstractProvider.GetMetadata(typeof(BCascaderMenuBody<,,>))">
                </AbstractComponent>
            }
        </CascadingValue>
    </AbstractContent>
</AbstractComponent>
