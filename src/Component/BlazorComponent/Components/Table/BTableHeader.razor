@namespace BlazorComponent
@inherits BDomComponentBase

<thead class="@CssProvider.GetClass()" id="@Id" @ref="Ref">
    <tr>
        @if (Headers != null)
        {
            @foreach (var header in Headers)
            {
                if (header.Width != null)
                {
                    <th class="@CssProvider.GetClass("th")" style="width:@header.Width.ToUnit();min-width:@header.Width.ToUnit()">@header.Text</th>
                }
                else
                {
                    <th class="@CssProvider.GetClass("th")">@header.Text</th>
                }
            }
        }
    </tr>
</thead>
